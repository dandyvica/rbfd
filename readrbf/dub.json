{
	"name": "readrbf",
	"description": "A generic record-based file reader using rbf library",
	"authors": ["Alain Viguier"],
	"homepage": "https://github.com/dandyvica/rbfd",
	"license": "GPL-2.0",
	"dependencies": {
	},
	"targetPath": "bin",
	"targetType": "executable",
	"libs-linux": ["rbf", "sqlite3"],
	"libs-windows": ["..\\rbf\\lib\\rbf", "..\\..\\..\\tools\\sqlite3\\sqlite3"],
	"importPaths": ["source", "../rbf/interface"],
	"stringImportPaths": ["./views", "../rbf/views"],
	"lflags-linux": ["-L../rbf/lib", "-L/usr/lib/x86_64-linux-gnu"],
	"preBuildCommands-linux": ["pandoc -s -t man source/doc/help.md -o views/help.1", "man views/help.1 | col -b > views/help.txt"],
}
