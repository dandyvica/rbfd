{
	"name": "readrbf",
	"description": "A generic record-based file reader using rbf library",
	"authors": ["Alain Viguier"],
	"homepage": "https://github.com/dandyvica/rbfd",
	"license": "GPL-2.0",
	"dependencies": {
		"dyaml": {"version" : "~>0.5.0" },
	},
	"targetPath": "bin",
	"targetType": "executable",
	"libs": ["rbf"],
	"importPaths": ["source", "../rbflib/interface"],
	"lflags": ["-L../rbflib/lib"],
	"preBuildCommands": ["pandoc -s -t man source/help.md -o views/help.1", "man views/help.1 | col -b > views/help.txt"],
}
