<?xml version="1.0" encoding="UTF-8"?>
<!-- inspired from https://en.wikipedia.org/wiki/List_of_continents_by_GDP_%28nominal%29 -->
<!-- and http://www.nationsonline.org/oneworld/asia.htm -->
<rbfile
	version="1.0"
	description="Continents, countries, cities"
	ignoreRecord="^#"
	skipField="ID"
	mapper="type:2 map:0..2,2..4"
>

	<record name="CONT" description="Continent data">
		<field name="ID" description="Record ID" length="4" type="A"/>
		<field name="NAME" description="Name of the continent" length="15" type="A"/>
		<field name="AREA" description="Area of the continent" length="20" type="N"/>
		<field name="POPULATION" description="Population of the continent" length="20" type="N"/>
		<field name="DENSITY" description="Density per km2" length="10" type="A"/>
		<field name="CITY" description="Most populus city" length="20" type="A"/>
	</record>

	<record name="COUN" description="Country data">
		<field name="ID" description="Record ID" length="4" type="A"/>
		<field name="NAME" description="Name of the country" length="30" type="A"/>
		<field name="POPULATION" description="Number of inhabitants" length="20" type="N"/>
		<field name="CAPITAL" description="Capital of the country" length="20" type="N"/>
	</record>

</rbfile>
